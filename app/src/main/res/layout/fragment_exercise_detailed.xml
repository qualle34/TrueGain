<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.menu.ExerciseDetailedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/exercise_button_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_ripple"
                android:clickable="true"
                android:src="@drawable/ic_arrow_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exercise_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Barbell"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/exercise_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Bench Press"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium"
                    android:textSize="14sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_ripple"
                android:clickable="true"
                android:src="@drawable/ic_more" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/exercise_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_round_corners"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Summary:"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium" />

                <TextView
                    android:id="@+id/exercise_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="4sp"
                    android:paddingTop="10dp"
                    android:text="loading..."
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:text="Description"
            android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium" />

        <TextView
            android:id="@+id/exercise_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="loading..."
            android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/exercise_chart_title_primary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:text="Exercise load chart"
            android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/exercise_chart_container_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="150dp" />

        <TextView
            android:id="@+id/exercise_chart_title_secondary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:text="1 Rep max chart"
            android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/exercise_chart_container_secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="150dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:text="Exercise technique"
            android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium" />

        <TextView
            android:id="@+id/exercise_technique"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="loading..."
            android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>