<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_workout_card"
    android:layout_width="200dp"
    android:layout_height="145dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/background_round_corners"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp"
    tools:context=".ui.card.CardWorkoutFragment">

    <TextView
        android:id="@+id/workout_card_upper_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 June"
        android:textAppearance="@style/TextAppearance.TrueGain.SecondaryLight" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/workout_card_middle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 Exercises"
        android:textAppearance="@style/TextAppearance.TrueGain.SecondaryMedium"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp" />


    <TextView
        android:id="@+id/workout_card_lower_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 new achievements"
        android:textAppearance="@style/TextAppearance.TrueGain.GrayLight"
        android:textSize="10sp" />
</LinearLayout>
