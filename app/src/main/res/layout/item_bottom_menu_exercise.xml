<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exercise_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="6dp"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/exercise_item_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/test_barbell_bench_press"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exercise_item_equipment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Barbell"
            android:textAppearance="@style/TextAppearance.ShapeUp.PrimaryLight"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/exercise_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Bench Press"
            android:textAppearance="@style/TextAppearance.ShapeUp.PrimaryMedium"
            android:textSize="14sp" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/exercise_item_info"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        android:src="@drawable/ic_star"/>
</LinearLayout>