<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".ui.profile.MeasureDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/workout_button_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_ripple"
                android:clickable="true"
                android:src="@drawable/ic_arrow_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/measure_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Measure"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryBold"
                    android:textSize="22sp" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_ripple"
                android:clickable="true"
                android:src="@drawable/ic_more" />

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/measure_chart_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:minHeight="150dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:padding="10dp"
            android:background="@drawable/background_round_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/measure_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="7 June"
                android:textAppearance="@style/TextAppearance.TrueGain.SecondaryMedium"
                android:textSize="16sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/measure_value"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/background_input"
                android:gravity="center"
                android:hint="0"
                android:layout_marginEnd="16dp"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:selectAllOnFocus="true"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@color/twine"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/measure_save"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_round_corners_twine"
                android:clickable="true"
                android:padding="10dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_apply" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="History"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/measure_recycler_view"
            android:name="com.qualle.truegain.MeasureListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="3"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_user_measure" />

    </LinearLayout>
</ScrollView>