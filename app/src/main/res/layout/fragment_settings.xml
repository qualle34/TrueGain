<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".ui.profile.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/settings_button_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_ripple"
                android:clickable="true"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:id="@+id/workout_list_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="Settings"
                android:textAppearance="@style/TextAppearance.TrueGain.PrimaryBold"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Main"
                android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium"
                android:textSize="20sp" />


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/pearl_bush"
                android:hint="Language"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/settings_spinner_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pearl_bush"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/pearl_bush"
                android:hint="Weight units"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/settings_spinner_weight_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pearl_bush"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/pearl_bush"
                android:hint="Length units"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/settings_spinner_length_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/pearl_bush"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <Button
            android:id="@+id/settings_save"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_round_corners"
            android:text="Save"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.TrueGain.SecondaryLight"
            android:textColor="@color/zircon"
            android:textSize="18dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:text="Help"
                android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/settings_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Support"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_delete_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Delete account"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_arrow_right" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginVertical="8dp"
                android:gravity="center"
                android:text="Info"
                android:textAppearance="@style/TextAppearance.TrueGain.PrimaryMedium"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/settings_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Privacy"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Terms of use"
                    android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_arrow_right" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:text="Version 1.0"
                android:textAppearance="@style/TextAppearance.TrueGain.PrimaryLight"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>